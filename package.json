{
    "name": "afterposten",
    "version": "0.1.0",
    "private": true,
    "main": "electron/main.js",
    "author": "scrobot",
    "description": "AI-powered LinkedIn post creation, scheduling, and publishing desktop app",
    "scripts": {
        "dev": "next dev",
        "dev:electron": "electron .",
        "build": "prisma generate && next build",
        "build:electron": "pnpm build && electron-builder --config electron-builder.yml",
        "build:electron:mac": "pnpm build && electron-builder --mac --config electron-builder.yml",
        "build:electron:win": "pnpm build && electron-builder --win --config electron-builder.yml",
        "build:electron:linux": "pnpm build && electron-builder --linux --config electron-builder.yml",
        "start": "next start",
        "lint": "eslint",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "postinstall": "prisma generate",
        "prepare": "husky"
    },
    "dependencies": {
        "@ai-sdk/openai": "^3.0.30",
        "@ai-sdk/react": "^3.0.96",
        "@prisma/adapter-better-sqlite3": "^7.4.1",
        "@prisma/client": "^7.4.1",
        "@prisma/client-runtime-utils": "^7.4.1",
        "ai": "^6.0.94",
        "better-sqlite3": "^12.6.2",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "next": "16.1.6",
        "openai": "^6.22.0",
        "prisma": "^7.4.1",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "uuid": "^13.0.0",
        "vectra": "^0.12.3",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.2",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/uuid": "^11.0.0",
        "babel-plugin-react-compiler": "1.0.0",
        "dotenv": "^17.3.1",
        "electron": "^40.6.0",
        "electron-builder": "^26.8.1",
        "eslint": "^9",
        "eslint-config-next": "16.1.6",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "typescript": "^5",
        "vitest": "^4.0.18"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{ts,tsx,json,css,md}": [
            "prettier --write"
        ]
    }
}
